<% if current_user %>
<%= form_for [post, post.comments.build], remote: true do |f| %>
  <div class="form-group">
    <br/>
    <%= f.text_area :body, rows: 3, class: 'form-control', placeholder: "Enter comment" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
<% end %>