<% if comment.user %>
  <%= image_tag(comment.user.avatar.tiny.url) if comment.user.avatar? %>
  <small><%= comment.user.name || comment.user.email %> commented <%= time_ago_in_words(comment.created_at) %> ago</small>
<% end %>
<textarea rows="3" class="form-control" readonly><%= comment.body %></textarea>
